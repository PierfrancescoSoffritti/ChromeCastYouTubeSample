<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pierfrancescosoffritti.androidyoutubeplayer.chromecast.sampleapp">

    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".examples.basicExample.BasicExampleActivity"
            android:label="@string/basic_example" />

        <activity
            android:name=".examples.playerControlsExample.PlayerControlsExample"
            android:label="@string/player_controls_example" />

        <activity
            android:name=".examples.notificationExample.NotificationExampleActivity"
            android:label="@string/notification_example"
            android:launchMode="singleInstance" />

        <activity
            android:name=".examples.localPlayerExample.LocalPlayerInitExampleActivity"
            android:label="@string/local_player_example"
            android:launchMode="singleInstance" />

        <meta-data
            android:name="com.google.android.gms.cast.framework.OPTIONS_PROVIDER_CLASS_NAME"
            android:value="com.pierfrancescosoffritti.androidyoutubeplayer.chromecast.sampleapp.examples.CastOptionsProvider" />
    </application>

</manifest>