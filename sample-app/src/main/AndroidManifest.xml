<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pierfrancescosoffritti.androidyoutubeplayer.chromecast.sampleapp">

    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity">

        </activity>

        <meta-data
            android:name="com.google.android.gms.cast.framework.OPTIONS_PROVIDER_CLASS_NAME"
            android:value="com.pierfrancescosoffritti.androidyoutubeplayer.chromecast.sampleapp.CastOptionsProvider" />

        <activity
            android:name=".BasicExampleActivity"
            android:label="@string/title_activity_basic_example"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".serviceExample.ServiceActivity"
            android:label="@string/title_activity_service"
            android:theme="@style/AppTheme">

        </activity>

        <service android:name=".serviceExample.MediaPlayerService" />

        <activity
            android:name=".mediaSessionExample.MediaSessionActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".mediaSessionExample.MediaSession_inService">
            <intent-filter>
                <action android:name="android.media.browse.MediaBrowserService" />
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </service>

        <receiver android:name="android.support.v4.media.session.MediaButtonReceiver">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>

    </application>

</manifest>